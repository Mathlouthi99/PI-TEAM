{% extends 'baseFront.html.twig' %}
 {% block body %}


     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
     <script>
         $(document).ready(function(){
             $("#myInput").on("keyup", function() {
                 var value = $(this).val().toLowerCase();
                 $("#myTable tr").filter(function() {
                     $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                 });
             });
         });
     </script>




     <!--vols -->
     <div class="Tours">
         <div class="container">
             <div class="row">
                 <div class="col-md-12">
                     <div class="titlepage">
                         <h2>LISTE DES VOITURES </h2>
                     </div>
                 </div>
             </div>
             <section id="demos">
                 <div class="row">
                     <div class="col-md-12">
                         <div class="owl-carousel owl-theme">

                             {% for i in tabvoitureby %}

                                 <div class="item">

                                     <h4>Voiture : {{ i.marque}} </h4>


                                     <h2> TYPE VOITURE: {{ i.type}}</h2>
                                     <h2> Date DEBUT: {{ i.datedebut|date("m/d/Y") }}</h2>
                                     <h2> Date FIN: {{ i.datefin|date("m/d/Y") }}</h2>
                                     <h2> DISPONIBILITE: {{ i.disponibilite }}</h2>
                                     <h2> PRIX: {{ i.prix }} TND</h2>
                                     <a  class="btn btn-primary btn-xs" href="{{ path('addreservation',{'id':i.id}) }}">
                                         <i class="fa fa-1x">
                                             Reserver
                                         </i>
                                     </a>
                                     <a href="{{ path('checkoutoffpaiV') }}" class="btn btn-primary btn-xs" >
                                         <i class="fa fa-adjust">
                                             payer
                                         </i>

                                     </a>


                                     <ul class="nav pull-right top-menu">
                                     </ul>

                                     <p></p>
                                 </div>


                             {% endfor %}
                         </div>
                     </div>
                 </div>

             </section>
         </div>
     </div>
     <!-- end vols -->





 {% endblock %}