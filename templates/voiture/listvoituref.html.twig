{% extends 'baseFront.html.twig' %}
 {% block body %}
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/css/bootstrap.min.css" integrity="sha384-SI27wrMjH3ZZ89r4o+fGIJtnzkAnFs3E4qz9DIYioCQ5l9Rd/7UAa8DHcaL8jkWt" crossorigin="anonymous">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">

     <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
     <script src="//code.jquery.com/jquery.js"></script>
     <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
     <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
     <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet'>

     <!-- end vols -->
     <style>
         label:hover, label:active {
             color:yellow;
         }
         .drone
         {
             display: none;
         }
         input[type="radio"]:checked+label{ font-weight: bold; color:yellow;}

     </style>


     <div class="Tours">
         <div class="container">
             <div class="row">
                 <div class="col-md-12">
                     <div class="titlepage">
                         <h2>Les meilleurs voitures</h2>
                     </div>
                 </div>
                 <p style="margin-left: 950px"> <input  id="myInput"  type="text" placeholder="Search..">
             </div>
             <section id="demos">
                 <div class="row">
                     <div class="col-md-12">
                         <div class="owl-carousel owl-theme">

                             <tbody  id="myTable">
                             {% for i in tabvoiture %}

                                 <div class="item">
                                     <div class="titlepage">
                                         <h1 style="color: #002a80">{{ i.type }} </h1>

                                         <img  class="img-circle" src="../../public/uploads/images/products/{{ i.image }}" alt="#" width="500" style="height:300px;" />

                                         <h3>{{ i.marque }}</h3>
                                         <p> {{ i.prix }} TND</p>
                                         <p> DISPONIBILITE:{{ i.disponibilite }} </p>
                                         <div class="container">




                                         </div>


                                         <script>


                                             $(function () {
                                                 $(".rateyo").rateYo().on("rateyo.change", function (e, data) {
                                                     var rating = data.rating;
                                                     $(this).parent().find('.score').text('score :'+ $(this).attr('data-rateyo-score'));
                                                     $(this).parent().find('.result').text('rating :'+ rating);
                                                     $(this).parent().find('input[name=rating]').val(rating); //add rating value to input field
                                                 });
                                             });

                                         </script>
                                     </div>



                                     <div class="button_section"> <a class="main_bt" href="{{ path('addreservation',{'id':i.id}) }}">RESERVER</a>  </div>
                                     <div class="button_section"> <a class="main_bt" href="{{ path('checkoutoffpaiV') }}">PAYER</a>  </div>
                                     {#  <ul class="nav pull-right top-menu">
                                    <li><a class="logout" href="{{ path('listChambreByHotel',{'id':i.id}) }}">  </a></li>
                                </ul>#}

                                 </div>


                             {% endfor %}

                             </tbody>
                         </div>
                     </div>
                 </div>

             </section>
         </div>
     </div>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
     <script>
         $(document).ready(function(){
             $("#myInput").on("keyup", function() {
                 var value = $(this).val().toLowerCase();
                 $("#myTable h3").filter(function() {
                     $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                 });
             });
         });
     </script>

     {{ include('@MercurySeriesFlashy/flashy.html.twig') }}
 {% endblock %}