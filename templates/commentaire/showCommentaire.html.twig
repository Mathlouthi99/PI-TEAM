{% extends 'baseFront.html.twig' %}
{% block title %}
    Liste des Commentaires
{% endblock %}
{% block body %}
    <h1 style="color:#3ea9dd "> Liste des Commentaires </h1>
    <table border="0" class="display table table-bordered" id="hidden-table-info">

        <tr>
            <td style="color: #3ea9dd"> Id de Client </td>
            <td style="color: #3ea9dd"> Message </td>

            <td style="color: #3ea9dd"> Supprimer </td>


        </tr>
        {% for i in showCommentaire %}
            <tr>
                <td>{{ i.id }}</td>
                <td>{{ i.message }}</td>
                <td> <a href="{{ path('deleteCommentaire',{'id':i.id}) }}" class="btn btn-danger btn-xs">
                        <i class="fa fa-trash">

                        </i>
                    </a></td>

        {% endfor %}
    </table>

{% endblock %}