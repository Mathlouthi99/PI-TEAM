{% block body %}
    <img class="img-circle" src="{{asset('back/img/11.png') }}" width="35px" height="35px" align="">
    <form>


    <h1 align="center" style="color: #B0413E">Hôtel {{afficheResChambre.chambre.hotel.NomHotel}} </h1><hr>
    <fieldset data-resize="20">
    <legend>Fiche de réservation  </legend>

        <h3 style="color: #022739">Nom du Client   : </h3>
        <p style="color: #0b2e13"> </p>
        <h3 style="color: #022739">Numéro de téléphone  : </h3>
        <h3 style="color: #022739">Date de la réservation :   <p style="color: #114c7d">{{afficheResChambre.dateRes|date('d-m-Y')}}</p></h3>
        <h3 style="color: #022739">Informations de la chambre : </h3>
