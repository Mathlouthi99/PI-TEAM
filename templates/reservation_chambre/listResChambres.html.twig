{% extends 'baseBack.html.twig' %}
{% block title %}
    Reservation
{% endblock %}
{% block body %}

    <ul class="nav pull-right top-menu">
        <li><a class="logout" href="{{ path('addResChambre') }}">Ajouter</a></li>
    </ul>
    <a href="afficheResChambre">
        <h1 align="center">Reservation</h1>
    </a>


    <table border="0" class="display table table-bordered" id="hidden-table-info">

        <tr>

            <td style="color: #3ea9dd"> Date </td>
            <td style="color: #3ea9dd"> Nombres des jours </td>
            <td style="color: #3ea9dd"> Tarif </td>
            <td style="color: #3ea9dd"> code chambre </td>
            <td style="color: #3ea9dd"> Supprimer </td>
            <td style="color: #3ea9dd"> Imprimer </td>

        </tr>

        {% for i in resChambre %}
            <tr>

                <td>{{ i.dateRes|date('d-m-Y H:i:s') }}</td>
                <td>{{ i.nbrJ }}</td>
                <td>{{ i.tarif }} DT</td>
                <td>{{ i.chambre }}</td>


                <td> <a href="{{ path('deleteResChambre',{'id':i.id}) }}" class="btn btn-danger btn-xs">
                        <i class="fa fa-trash">

                        </i>
                    </a>

                </td>
                <td>


                    <a href="{{ path('imprimResChambre',{'id':i.id}) }}" class="btn-group btn-group-xs">
                        <i class="fa fa-print">
                            IMPRIMER LA RESERVATION
                        </i>
                    </a>


                </td>


            </tr>

        {% endfor %}
    </table>


{% endblock %}